 <!--
 ---------------------------------------------------------
 =============================>>> Question  Screen => {> question <}
 ---------------------------------------------------------
 -->
<div box-target-class="player-body-screen" box-target-type="box-player" ng:if="screen_type == 3" class="selector keep-it-padding  player-body-screen" style="outline-offset:-4px;">
    <div box-target-type="box-containers" box-target-class="question-screen-box" class="selector x-widther container screen-container survey-player-questions question_typeco_object question_opg_editor_block select_box_brd question-screen-block question-screen-box">
       <div box-target-type="box-containers" box-target-class="question-box-text" class="selector text-left question-body load_qs_theme question_opg_editor select_box_brd question-box-block question-box-text">
          <span box-target-type="box-labels" box-target-class="question-label-box" class="selector label-question default_theme_texts_bg select_box_brd question-label-block question-label-box">
            <span class="qs-numericals select_numbers">
              {> question_labels['label_' + _settings_.indexes.questions.toString()][question_index] | uppercase <}
            </span>
            <!-- <span class="qs-numericals select_numbers">1</span> -->
            <div class="arrow-right default_theme_brd select_box_brd  question-label-box-brd"></div>
          </span>
          <span box-target-type="box-texts" box-target-class="question-data-text-bdy" class="selector question-body-text select_texts question-data-text-bdy" ng:bind:html='_questions_[question_index].question_body | apply_html'></span>
          <p box-target-type="box-texts" box-target-class="question-data-text-desc" ng:if="_questions_[question_index].question_description.is_enabled == true != undefined" class="dsc-data question-data-text-desc" data:ng:bind:html="_questions_[question_index].question_description.value | apply_html"></p>
          <span class="selector required_option question_type__colr select_texts question-text-required-block question-text-required-text" ng:if="question.answer_settings.is_required == true"> Required </span>
       </div>
       <!--  Questin Media Cases-->
       <div box-target-class="question-data-media" box-target-type="box-media" ng:if="_questions_[question_index].media_question != undefined" class="selector question-data-media">
         <!-- Case it an image  -->
         <img class="image-responsive" ng:if="_questions_[question_index].media_question.media_type == 0 " ng:src="{> _questions_[question_index].media_question.Media_directory <}" alt="">
         <!-- Case it video -->
         <div ng:if="_questions_[question_index].media_question != undefined  && _questions_[question_index].media_question.media_type == 1" class="video-data-media question-video image-responsive">
           <!-- case it vimeo or youtube  -->
           <iframe ng:src="{> _questions_[question_index].media_question.embed_path | trust_iframe_url <}" ng:if="_questions_[question_index].media_question.video_type == 1 || _questions_[question_index].media_question.video_type == 0" width="100%" height="120px"></iframe>
           <!-- case it mp4  -->
           <video ng:if="_questions_[question_index].media_question.video_type == 2" controls>
             <source ng:src="{> _questions_[question_index].media_question.mp4_option.mp4_url | trust_iframe_url <}" type="video/mp4">
             <source ng:src="{> _questions_[question_index].media_question.mp4_option.ogg_url | trust_iframe_url <}" type="video/ogg">
           </video>
         </div>
       </div>
       <!--  Case use has to select many answer-->
       <div class="notes select_box_brd question-warnning-block question-warnning-box" >
        <span class="selector text-left question_type__colr select_texts ther_is_many" ng:if="_questions_[question_index].answer_settings.single_choice == false">
           There're many correct choices , You've to select them  to pass this question
        </span>
       </div>

       <!-- Answer container -->
       <div class="answer-container answer-block-selector">
         <ul id="question_{>_questions_[question_index]._id<}" class="question-list question-list-preview-quta" ng:if="_questions_[question_index].question_type <= 2">
           <li ng:click="select_this_answer ( _questions_[question_index]._id , answer_value._id , _questions_[question_index] , answer_value , app_id , user_id , answer_value.is_correct , $index )" box-target-class="answer-container ul li" box-target-type="box-answers" ng:class="list_answer_classes()" class="selector answer_opg_editor select_box_brd question-answer-row-select-blk question-answer-row-select answer_{>answer_value._id<}" ng:repeat="(anskey , answer_value) in _questions_[question_index].answers_format">
             <!-- Answer label -->
             <!-- {> question_labels['label_' + _settings_.indexes.questions.toString()][question_index] | uppercase <} -->
             <span box-target-type="box-labels" box-target-class="answer_label"  class="answer_label selector">{> question_labels['label_' + _settings_.indexes.answers.toString()][$index] | uppercase <}</span>
             <!-- Answer Media  -->
             <!-- answer media for 0 -->
             <div ng:if="answer_value.media_optional != undefined && _questions_[question_index].question_type == 0" class="media-data-answer">
               <!-- Case it Image -->
               <img ng:if=" answer_value.media_optional != undefined &&  answer_value.media_optional.media_type ==0" ng:src="{>answer_value.media_optional.Media_directory + '?' + answer_value.media_optional.image_updated_date <}" class="image-responsive" alt="Image">
               <!-- Case it video  -->
               <div ng:if="answer_value.media_optional != undefined && answer_value.media_optional.media_type ==1" class="video_case text-center">
                  <!-- Case video iframes => youtube/ vimeo -->
                  <iframe class="iframe-selector" ng:if="(answer_value.media_optional.video_type == 0 || answer_value.media_optional.video_type == 1 )" ng:src="{> answer_value.media_optional.embed_path | trust_iframe_url <}" width="100%" height="120px"></iframe>
                  <!-- Case video tags => html mp4 video -->
                  <video ng:if="answer_value.media_optional.video_type == 2 " width="100%" height="120px" controls>
                      <source ng:if="answer_value.media_optional.mp4_option != undefined" ng:src="{>answer_value.media_optional.mp4_option.mp4_url | trust_iframe_url <}" type="video/mp4">
                      <source ng:if="answer_value.media_optional.mp4_option != undefined" ng:src="{>answer_value.media_optional.mp4_option.ogg_url | trust_iframe_url <}" type="video/ogg">
                  </video>
               </div>
             </div>
             <!-- answer media for 1 -->
             <div ng:if="_questions_[question_index].question_type == 1" class="media-data-answer">
               <!-- Case There is not any media  -->
               <div ng:if='answer_value.media_type == undefined' class="not-media-there">
                  <img ng:src="{> server_ip + 'img/media-default-icone.jpg'<}" class="image-responsive" alt="Image">
               </div>
               <!-- Case it Image -->
               <img ng:if="answer_value.Media_directory != undefined && answer_value.media_type == 0" ng:src="{>answer_value.Media_directory + '?' + answer_value.image_updated_date <}" alt="Image"  class="image-responsive">
               <!-- Case it video  -->
               <div ng:if="answer_value.embed_path != undefined && answer_value.media_type ==1" class="video_case text-center">
                  <!-- Case video iframes => youtube/ vimeo -->
                  <iframe class="iframe-selector" ng:if="(answer_value.video_type == 0 || answer_value.video_type == 1 )" ng:src="{> answer_value.embed_path | trust_iframe_url <}" width="100%" height="120px"></iframe>
                  <!-- Case video tags => html mp4 video -->
                  <video ng:if="answer_value.video_type == 2 " class="video-mp4" controls>
                      <source ng:if="answer_value.mp4_option != undefined" ng:src="{>answer_value.mp4_option.mp4_url | trust_iframe_url <}" type="video/mp4">
                      <source ng:if="answer_value.mp4_option != undefined" ng:src="{>answer_value.mp4_option.ogg_url | trust_iframe_url <}" type="video/ogg">
                  </video>
               </div>
             </div>
              <!-- Answer Texts  -->
              <div ng:if="_questions_[question_index].question_type == 0" class="answer-texts answer_txt_val">
                <span class="answer_text">{> answer_value.value <}</span>
              </div>
              <!-- Case Boolean questions -->
              <div class="answer_txt_val" ng:if="_questions_[question_index].question_type == 2">
                <span class="answer_text">{> answer_value.boolean_value <}</span>
              </div>

              <span class="iconxs-correct-answers fa fa-times wrong-ico"></span>
              <span class="iconxs-correct-answers fa fa-check correct-ico"></span>

           </li>
         </ul>
       </div>
       <!--  End Answer Container -->


       <!-- Button Container  -->
       <div ng:if ="_settings_.navigation_btns == true" class="qusu-details ques-questions text-right">
           <button box-target-class="back-answer-question-button" box-target-type="box-buttons" ng:click="back_to_previouse_slide(question_index)" class="selector button-take-this select_button back-answer-question-button back-answer-question-button-block" type="button" name="button">
                 <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                 {> _settings_.label_btns.lbl_back_with <}
           </button>
           <button style="margin-right:10px;" box-target-class="continue-answer-question-button" box-target-type="box-buttons" ng:click="go_to_next_slide(question_index)" class="selector button-take-this select_button continue-answer-question-button continue-answer-question-button-block" type="button" name="button">
               <i class="fa fa-angle-double-right" aria-hidden="true"></i>
               <span>{> _settings_.label_btns.lbl_continue_with <}</span>
               <!-- <span ng:if="$index != (__player_object.questions.length - 1)">{> _settings_.label_btns.lbl_continue_with <}</span> -->
               <!-- <span ng:if="$index == (__player_object.questions.length - 1)">{> _settings_.label_btns.lbl_finish_with <}</span> -->
           </button>
       </div>
    </div>
</div>




 <!--
---------------------------------------------------------
=============================>>> Welcome Screen
---------------------------------------------------------
 -->
<div box-target-class="player-body-screen" box-target-type="box-player" ng:if="screen_type == 0 && _settings_.enable_screens == true" class="selector swiper-wrapper quiz-contents keep-it-padding player-body-screen" ng:if="_settings_.enable_screens == true" style="outline-offset:-4px;">
    <div  class="swiper-slide welcoming-screen-x">
      <div box-target-class="box-welcome-screen" box-target-type="box-containers" data-selected-block="question-slide" class="container  x-widther screen-container screen-ending-starting screen_opg_editor welcome-screen select_box_brd welcome-screen-block box-welcome-screen selector">
         <div>
             <div box-target-class="welcome-screen-text" box-target-type="box-texts" box-target-class="player-body-screen" box-target-type="box-player" class="selector description-body redactor-styles select_texts welcome-screen-text-block welcome-screen-text" ng:bind:html="_settings_.titles.title_start_with | apply_html"></div>
             <div class="qusu-details text-right">
                <button ng:click="start_the_quiz()" box-target-class="welcome-screen-button" box-target-type="box-buttons" class="selector button-take-this select_button welcome-screen-button-block welcome-screen-button" type="button" name="button">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                      {> _settings_.label_btns.lbl_start_with <}
                </button>
             </div>
         </div>
      </div>
    </div>
</div>

<!--
---------------------------------------------------------
=============================>>> Ending Screen
---------------------------------------------------------
-->
<div box-target-class="player-body-screen" box-target-type="box-player" ng:if="screen_type == 1 && _settings_.enable_screens == true" class="selector player-body-screen swiper-slide keep-it-padding" style="outline-offset:-4px;" >
    <div data-selected-block ="question-slide" class="selector screen_opg_editor container screen-container about-quiz screen-ending-starting select_box_brd goodbye-screen-block box-goodbye-screen x-widther ">
        <div class="selector description-body redactor-styles select_texts goodbye-screen-text-block goodbye-screen-text" ng:bind:html="_settings_.titles.title_end_with | apply_html"></div>
        <div class="selector warning_case select_box_data goodbye-screen-text-warning-block goodbye-screen-warning-text"></div>
        <div class="qusu-details ques-questions text-right">
            <button ng:click="back_to_previouse_slide((_questions_.length - 1))" class="selector button-take-this select_button back-button-goodbye-screen-block back-button-goodbye-screen" type="button" name="button">
                <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                {> _settings_.label_btns.lbl_back_with <}
            </button>
            <button ng:click="submit_the_quiz()" class="selector button-take-this submi_the_quiz_handler select_button submit-button-goodbye-screen submit-button-goodbye-screen-block" type="button" name="button">
                <i class="fa fa-arrow-right fac-icon-submit" aria-hidden="true"></i>
                <span>
                    {> _settings_.label_btns.lbl_submit_quiz_with <}
                </span>
            </button>
        </div>
    </div>
  </div>


  <!--
---------------------------------------------------------
=============================>>> Result  Screen
---------------------------------------------------------
-->
<div box-target-class="player-body-screen" box-target-type="box-player" ng:if="screen_type == 2 && _settings_.enable_screens == true" class="selector player-body-screen swiper-slide welcoming-screen-x keep-it-padding" style="outline-offset:-4px;">
    <div data-selected-block ="question-slide" style="margin-bottom:20px;" class="selector x-widther container screen-container screen-ending-starting screen_opg_editor select_box_brd box-result-screen result-screen-block">
      <div>
        <div class="selector description-body redactor-styles title_success_with select_texts result-screen-text-block result-screen-text"  ng:bind:html="_settings_.titles.title_success_with | apply_html"></div>
        <div class="selector description-body redactor-styles title_failed_with select_texts result-screen-text-block result-screen-text"  ng:bind:html="_settings_.settings.titles.title_failed_with | apply_html"></div>
        <div class="quiz-grade">
           <div class="quiz-grade grade-score text-center">
               <h3 class="selector select_texts result-screen-score-text-block result-screen-score-text" ng:mouseover="show_hovred_element('select_texts')">{> _settings_.label_btns.lbl_score_with <} : .... </h3>
           </div>
           <div class="quiz-grade grade-score text-center">
               <h5 class="selector select_texts result-screen-grade-text-block result-screen-grade-text" ng:mouseover="show_hovred_element('select_texts')">{> _settings_.label_btns.lbl_grade_with <} : ....%</h5>
           </div>
        </div>
        <div class="qusu-details text-right">
              <button  ng:click="go_back_to_first_qs()" class="selector button-take-this select_button review-result-box-block review-result-box" type="button" name="button">
                <i class="fa fa-reply-all" aria-hidden="true"></i>
                {> _settings_.label_btns.lbl_review_with <}
              </button>
              <button   ng:click="go_back_to_first_qs()" class="selector button-take-this retake-this-quiz select_button retake-result-box-block retake-result-box" type="button" name="button">
                <i class="fa fa-repeat" aria-hidden="true"></i>
                <span>
                {> _settings_.label_btns.lbl_retake_with <}
                </span>
              </button>
         </div>
      </div>
    </div>
</div>
