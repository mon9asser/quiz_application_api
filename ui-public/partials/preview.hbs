<iframe onload="resizeIframe(this)" class="ifram-contaier" src="http://localhost:9000/{{app._id}}/live_preview/{{app.creator_id}}" width="100%">
</iframe>

<script type="text/javascript">
$(document).ready(function(){

  window.resizeIframe = function (obj){
    setTimeout(function(){
      var player_body = obj.contentWindow.document.body ;
      var swiperContainer = $(player_body).find('.preview_player_container') ;
        // '.screen-container'
        swiperContainer.find('.screen-container , .object-layouts-container').css({
          width: "95%"
        });

        $('.ifram-contaier').css({
          height : swiperContainer.height() + 25
        });
    } , 1200);
    // var iframeContainer =player_body.innerHTML.find('.container-fluid-x');
    // var hieght_iframe =$(iframeContainer).find('.container-fluid-x');
  };

});

</script>
