         {{# each app.questions }}
            <div class="question-tags">
              <div class="quiz-qs-preview">
                <div class="question-head">
                    <!-- Question Text -->
                    <p>
                      {{ question_body }}
                    </p>
                    <div class="clearFix"></div>
                    <!-- Question media -->
                    <div class="qs-media-data">
                      <!-- +++++++++++++++++++++++++++++++++++++ -->
                      <!--++++++++++++ Case it Image ++++++++++++-->
                      <!-- +++++++++++++++++++++++++++++++++++++ -->
                      <div class="image-cogs" ng:if="{{ media_question/media_type }} == 0">
                        image
                      </div>
                      <div ng:if="{{ media_question/media_type }} == 0" style="background-image:url({{server_ip}}/{{media_question/media_field }})" class="media-optional-src"></div>

                    </div>
                    <div class="clearFix"></div>
                </div>
                <!-- Question Description -->
                <span class="qs-description">
                  {{ question_description }}
                </span>
                <div class="clearFix"></div>
                <!-- +++++++++++++++++++++++++++++++++++ -->
                <!-- ++++++++++++++++ Answers ++++++++++ -->
                <!-- +++++++++++++++++++++++++++++++++++ -->
                <ul class="owl-carousel">

                  {{#each  answers_format }}

                    <!-- Case it text only -->
                    <li ng:if="{{../question_type}} == 0">
                      <span>
                        <i class="labels">C</i>
                        <span>
                          {{ value }}
                        </span>
                      </span>
                    </li>

                    <!-- Case it Media Choices -->
                    <li ng:if="{{../question_type}} == 1">
                      <!-- CASE IT IMAGE -->
                      <span ng:if="{{media_type}} == 0">
                        <i class="labels">C</i>
                        <span>
                           {{ media_src }}
                        </span>
                      </span>
                      <!-- CASE IT VIDEO -->
                      <span ng:if="{{media_type}} == 1">
                        <i class="labels">C</i>
                        <span>
                           {{ media_src }}
                        </span>
                      </span>
                    </li>

                    <!-- Case it rating scales -->
                    <li ng:if="{{../question_type}} == 2">
                      <span>
                        <i class="labels">C</i>
                        <span></span>
                      </span>
                    </li>

                  {{/each }}
                </ul>
              </div>

               <div class="controller-btns">
                 <button class="btn btn-danger-outline" type="button" name="button">
                    Back
                 </button>
                 <button class="btn btn-primary-outline" type="button" name="button">
                    Continue
                 </button>
               </div>
            </div>
         {{/each }}

