<!DOCTYPE html>
<html lang="en" dir="ltr" ng:app="applications" ng:controller="page-controller">
  <head>
      <meta charset="utf-8">
      <title>Quiz Editor</title>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.0/angular.min.js" charset="utf-8"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css" rel="stylesheet">
      <link href="{{ server_ip }}ext/frameworks/css/redactor.min.css" rel="stylesheet">
      <link href="{{ server_ip }}ext/frameworks/css/cropper.css" rel="stylesheet">
      <link href="{{ server_ip }}ext/frameworks/css/spectrum.css" rel="stylesheet">
      <link href="{{ server_ip }}ext/css/swiper.min.css" rel="stylesheet">
      <link href="{{ server_ip }}ext/css/apps.css" rel="stylesheet">

      <style media="screen">
        .editor-block {
          width: 95% !important;
          margin: 0px auto;
        }
        .buttons-container{
          width: 100% !important;
          padding: 0px !important;
          display: block !important;
          margin-top: 15px !important;
          margin-bottom: 10px !important;
        }
      </style>
      <style media="screen" ng:if="{{ header_status }} == false" >
        .update-rows { margin-top: 16px !important; }
        .question-data { margin-top: 10px !important; }
        .question-x { margin-top:0px !important; }
        .settings_menu {  top: -4px !important; }
      </style>
  </head>
  <body ng:controller="apps-controller">
    <!-- Inputs -->
    <input id="userId" type="hidden" name="" value="{{user.id}}">
    <input id="userEmail" type="hidden" name="" value="{{user.email}}">
    <input id="userName" type="hidden" name="" value="{{user.name}}">
    <input id="userToken" type="hidden" name="" value="{{user.token}}">
    <input id="serverIp" type="hidden" name="" value="{{ server_ip }}">
    <input id="applicationId" type="hidden" name="" value="{{app._id}}">
    <input id="applicationType" type="hidden" name="" value="{{app.app_type}}">


    <div class="editor-contents" ng:controller="apps-controller">
      <!-- ++++ Start Editor Contents ++++  -->
      <div class="side-left-bar">
        <!-- ++++ Start left bar ++++  -->
        <div class="question-data">
          <ul id="qs-sortable" class="question-x">
            <li id="question-muliple-choices" data-type="qst" data-question-type="0" question-data="partials/multi-choices.hbs" ng:click="add_new_question(0)">
                 <span class="qs-type" title="Multiple Choices">
                    <i class="icon-insert-template"></i>
                 </span>
                 <span class="titles">Choices</span>
            </li>
            <li id="question-media-choices" data-type="qst" data-question-type="1" question-data="partials/media-choices.hbs" ng:click="add_new_question(1)">
              <span class="qs-type" title="Media Choices">
                 <i class="icon-image"></i>
              </span>
              <span class="titles">Media</span>
            </li>
            <li id="question-boolean-choices" data-type="qst" data-question-type="2" question-data="partials/true-false.hbs" ng:click="add_new_question(2)">
             <span class="qs-type" title="Ture/False">
                <i class="icon-check-circle"></i>
             </span>
             <span class="titles">Boolean</span>
            </li>
          </ul>
        </div>
        <!-- ++++ End left bar ++++  -->
      </div>


      <div class="Quizontainer-fluid update-rows">
        <!-- ++++ Start application Title ++++  -->
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="area-qs-ch quiz-titles">
                <span class="questionnaire-title">
                  <!-- Quiz Name -->
                   <span ng:cloak>
                     {> _application_.questionnaire_title <}
                   </span>
                </span>
                <a class="choices-right-add btn-primary preview-button btn rm-margin" href="{{server_ip}}{{app._id}}/live_preview/{{user.id}}">
                  Preview Quiz
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="container-fluid row-x-body">
           <div class="row">
             <!-- +++++ Start Left Columns -->
             <div class="left_part col-md-5 col-sm-6 col-xs-12">
                <div class="question-data qsdragged-list qs-dropped background_drag_drop" style="margin-top:0px !important;">
                  <ul id="docQuestions" class="dropped-qs dropped-qs-2">
                     <li class="question-li-x qs-{>qs_value._id<}" id="questoin_tag_{>qs_value._id<}" data-index="{>$index<}" data-question-id="{>qs_value._id<}" ng:class="(deleted_question_id == qs_value._id) ? 'animated zoomOut':'' " ng:repeat="(qs_key , qs_value) in _questions_ track by $index" ng:cloak>
                       <div class="question-part">
                         <div class="qs-type quesiontlist_iconx">
                           <div class="drag-handler">
                             <i>...</i>
                           </div>
                           <div class="single-question-container">
                             <span class="qs-type" title="Multiple Choices">
                               <i ng:if="qs_value.question_type == 0" class="icon-insert-template"></i>
                               <i ng:if="qs_value.question_type == 1" class="icon-image"></i>
                               <i ng:if="qs_value.question_type == 2" class="icon-check-circle"></i>
                             </span>
                             <span class="qs-body" ng-bind="qs_value.question_body | striphtmltags" ng:cloak></span>
                           </div>
                         </div>
                       </div>
                     </li>
                     <div ng:if="_questions_.length == 0" class="qs-status">
                         <h2>
                          Drag drop questions here !
                         </h2>
                     </div>
                  <ul>
                </div>
             </div>
             <!-- +++++ End Left Columns -->




             <!-- +++++ Start Right Columns -->
              <div class="right_part col-md-7 col-sm-6 col-xs-12">
                <div class="switched-button switch-mode">
                  <div class="input-switch" ng:class="(screen_type == 0 ) ? 'display_editor_preview_option':'dontdisplay_editor_preview_option'">
                    <label for="switch-editor">Edit</label>
                    <input type="checkbox" id="switch-editor" ng:model="switching_editor_preview_value" ng:change="switching_editor_preview()" class="input" />
                    <label for="switch-editor" class="switch"></label>
                    <label for="switch-editor">Preview</label>
                  </div>
                </div>

                <!-- Question Container -->
                 <div class="question-editor swipper-container-block">
                   <div class="swiper-container swiper-data">
                     <div class="swiper-wrapper">
                       <div class="swiper-slide ">
                         <div class="editor-blocker">
                           <ul class="tab-editor">
                             <li>
                                <div class="x-editor-x-title question-opener"  ng:click="expand_collapsed_items('#question-pt')" >
                                  Question
                                </div>
                                <div class="clearFix"></div>
                                <div style="display:none;" class="x-editor-x-body open-this-tab" id="question-pt">
                                  <div id="dynamic-layer" class="col-sm-8 top-margins">
                                    <textarea id="editor-quest-data" class="form-control quest-title-edit textarea-qs redactor-editor"></textarea>
                                  </div>
                                  <div class="col-sm-4 media-uploads top-margins media-parts-x">

                                  </div>
                                </div>
                             </li>
                             <li>
                                <div class="x-editor-x-title" ng:click="expand_collapsed_items('#Description-pt')">
                                  Description
                                </div>
                                <div style="display:none;" class="x-editor-x-body" id="Description-pt">
                                  <div class="col-xs-12 col-md-12">
                                    <div class="row-cols margin-top">
                                       <textarea id="editor-desc-data" name="name" class="form-control descriptions description-field description-field-x redactor-editor" placeholder="Description ..." rows="3" cols="80"></textarea>
                                    </div>
                                  </div>
                                </div>
                              </li>
                             <li>
                                <div class="x-editor-x-title" ng:click="expand_collapsed_items('#answers-pt')">
                                    Answers
                                </div>
                                <div style="display:none;"class="x-editor-x-body" id="answers-pt">
                                  <div class="multi-answers-part">
                                     --
                                  </div>
                                </div>
                              </li>
                             <li>
                               <div class="x-editor-x-title" ng:click="expand_collapsed_items('#Settings-pt')">
                                  Question Settings
                               </div>
                               <div style="display:none;" class="x-editor-x-body" id="Settings-pt">
                                 <div class="col-sm-12">
                                   <div class="row-cols margin-top">
                                     <div class="question-settings">
                                       <ul class="listSettings-qs">
                                          <li class="show_lbls_qs">
                                             <div class="scale-options">
                                               <div class="checkbox-toggle answer-settins">
                                                 <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                                 <span class="title-checkbox">Show labels</span>
                                               </div>
                                             </div>
                                             <div class="scale-options item-labels">
                                                <input class="lab" type="text" placeholder="Left">
                                                <input class="lab" type="text" placeholder="Center">
                                                <input class="lab" type="text" placeholder="Right">
                                             </div>
                                           </li>
                                           <li class="required_qs">
                                             <div class="checkbox-toggle answer-settins">
                                                <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                                <span class="title-checkbox">
                                                  Required
                                                    <i class="help-links">?</i>
                                                </span>
                                             </div>
                                           </li>
                                           <li class="single_response_qs">
                                             <div class="checkbox-toggle answer-settins">
                                                <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                                <span class="title-checkbox"  data-toggle="tooltip" data-placement="right" title="Tooltip on right">
                                                  Single Response
                                                  <i class="help-links">?</i>
                                                </span>
                                             </div>
                                          </li>
                                          <li class="randomize_qs">
                                            <div class="checkbox-toggle answer-settins">
                                                <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                                <span class="title-checkbox">
                                                  Randomize
                                                  <i class="help-links">?</i>
                                                </span>
                                             </div>
                                          </li>
                                          <li class="super_sizer_qs">
                                            <div class="checkbox-toggle answer-settins">
                                                <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                                <span class="title-checkbox">
                                                  Super Size
                                                  <i class="help-links">?</i>
                                                </span>
                                             </div>
                                          </li>
                                          <li class="answer_stylish_qs">
                                            <div class="checkbox-toggle answer-settins">
                                               <input type="checkbox" id="check-toggle-2" class="switch_1 input-checkboxes">
                                               <span class="title-checkbox">
                                                 Style of Answer
                                                 <i class="help-links">?</i>
                                               </span>
                                            </div>
                                          </li>
                                          <li class="steps_qs">
                                                <span class="title-checkbox">
                                                  Steps ( ... )
                                                   <i class="help-links">?</i>
                                                </span>
                                                <div class="rating_scale_options">
                                                    <input  id="step_slider" min="2" max="10" type="range" name="">
                                                </div> <!-- Slide Range -->
                                           </li>
                                           <li>
                                             <span class="title-checkbox">
                                               Max characters ( ... )
                                              <i class="help-links">?</i>
                                            </span>
                                             <div class="rating_scale_options">
                                                 <input id="char_max_slider" min="100" max="2000" type="range" name="">
                                             </div> <!-- Slide Range -->
                                            </li>

                                       </ul>
                                     </div>
                                   </div>
                                 </div>
                               </div>
                             </li>
                           </ul>
                           <!--  Save Changes -->
                           <div class="editor-block btn-0-container">
                              <div class="buttons-container text-right">
                                  <button style="float:left;"  class="btn btn-danger-outline" type="button" name="button">
                                        Delete
                                  </button>
                                  <button id="saving-changes" class="btn btn-primary-outline save_changes " type="button" name="button">
                                        Save Changes
                                  </button>
                              </div>
                           </div>
                         </div>
                       </div>
                       <div class="swiper-slide ">
                         Views
                       </div>
                     </div>
                   </div>
                 </div>
              </div>
             <!-- +++++ End Right Columns -->



           </div>
        </div>
        <!-- ++++ End application Title ++++  -->
      </div>
      <!-- ++++ End Editor Contents ++++ -->
    </div>



    <!-- JS Links -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" charset="utf-8"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>
    <script src="{{ server_ip }}ext/frameworks/js/spectrum.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/redactor.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/redactor-font-color.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/redactor-font-size.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/redactor-font-family.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/cropper.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/sweetalert.min.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/frameworks/js/sortable.min.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/js/swiper.min.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/js/a-application.js"></script>
    <script type="text/javascript" src="{{ server_ip }}ext/js/app-apps.js"></script>
  </body>
</html>
