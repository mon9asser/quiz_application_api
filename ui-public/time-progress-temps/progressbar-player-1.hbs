<!-- Progress -1 -->
  <style media="screen">
    .highlighted-progress{
      width: 0px;
    }
  </style>
    <div ng:if="(  _user_activity_.user_completed_status == undefined || _user_activity_.user_completed_status == false )" class="progress-container option-container text-left">
      <div class="progress-bx">
        <span box-target-type="box-texts" box-target-class="progress-bar-txt" class="progress-bar-txt selector">
          <span ng:cloak ng:if="screen_type == 3">
              {> ( question_index + 1 ) * 100 /  _questions_.length | math_around_it <} %
          </span>
          <span ng:cloak>
              {>percentage_progress<}%
          </span>
        </span>
        <div class="progress-ctmain selector" box-target-type="box-containers" box-target-class="progress-ctmain">
          <div ng:cloak class="highlighted-progress"></div>
        </div>
      </div>
    </div>
